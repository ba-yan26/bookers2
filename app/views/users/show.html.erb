<h1>books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= @books.each do |book| %>
      <td>
        <%= link_to user_path do %>
          <%= image_tag book.get_image %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path %></td>
      <td><%= book.opinion %></td>
    </tr>
    <% end %>
  </tbody>
</table>