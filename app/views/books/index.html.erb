<h1>New Book</h1>

<%= form_with model:@book, url: books_path, method: :post, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :opinion %><br>
  <%= f.submit "Create Book" %>
<% end %>

<h1>Books</h1>

<table>
<thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
</thead>
<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_image %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.opinion %></td>
    </tr>
  <% end %>
</tbody>
</table>