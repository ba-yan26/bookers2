<% if flash[:notice] %>
  <p class="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<%= render partial: 'list', locals: { user: @user, book: @book } %>

<h1>Books</h1>
<table>
<thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
</thead>
<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_image %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.opinion %></td>
    </tr>
  <% end %>
</tbody>
</table>